    <body>
        <div class="main-wrapper">
			<%- include('jurymenu.ejs') -%>
            <div class="page-wrapper">
                <div class="content container-fluid">
					<div class="page-header">
						<div class="row align-items-center">
							<div class="col">
								<h5 class="page-title">Jury Round 3 Evaluation</h5>
							</div>
					</div>

                        <div class="form-group">

                            <div class="card">
                                <div class="card-body">
									<h6>Team Name: <b><%= jteam3[0]['team_name'] %></b></h6>
									<h6>PS ID: <b><%= jteam3[0]['ps_id'] %></b></h6>
									<h6>PS Title: <b><%= jteam3[0]['ps_title'] %></b></h6>
									<h6>Category:<b> <%= jteam3[0]['category'] %></b></h6>
									<h6>PS Description:<b> <%= jteam3[0]['ps_description'] %></b></h6>
                                    <h6>Overall 2 Rounds Scoring:<b> <%= jdata3[0]['result'] %>/50</b></h6>
									<div class="row">
										<div class="col-md-6">
											<div class="card">
												<div class="card-body">
													<h6 class="text-center"><b>ROUND 1 EVALUATION DETAILS</b></h6>
													<h6>Round 1 Jury Feedback: <b><%= jdata3[0]['feedback1'] %></b></h6>

													<h6>Round 1 Jury Assigned Tasks:</h6>
													<ul>
													<% jdata3[0]['tasksr1'].forEach(function(item) { %>
														<li><b><%= item %></b></li>
													<% }); %>
												</ul>
												</div>
											</div>
											</div>
									   
											<div class="col-md-6">
												<div class="card">
											<div class="card-body">
												<h6 class="text-center"><b>ROUND 2 EVALUATION DETAILS</b></h6>
												<h6>Round 2 Jury Assigned Tasks:</h6>
												<% jdata3[0]['tasksr2'].forEach(function(item) { %>
													<h6><b><%= item %></b></h6>
												<% }); %>
											</div>
											</div>
										</div>
                                    </div>
                                </div>
							</div>
                                <div>
                                   </div>
                            </div>
					<!-- /Page Header -->
					<!-- /Page Header -->
					<div class="row">
						<div class="col-md-12 col-sm-12">
							<div class="card card-table">
								<div class="card-body">
									<div class="table-responsive">
                                        <form action="/juryevaluation3" method="post">
											
												<!-- Initial task input field -->
												<div class="row">
													<div class="form-group">
													<label>Round2 Feedback</label>
													<textarea class="form-control" name="feedback", id ="feedback"></textarea>
												</div>
												<div class="row">
													<div class="col-md-12">
														<div class="form-group"></div>
														<label>Enter Task 1:</label>
														<div class="input-group">
															<input type="text" class="form-control" name="task[0]">
															<button class="btn btn-primary" type="button" id="addTask">+</button>
														</div>
													</div>
												</div>
												<div class="row">
													<div class="col-md-12">
														<div class="form-group" id = "taskFields"></div>
				
													</div>
												</div>

												

								
										<table class="table table-center">
											<thead>
												<tr>
													<th>Criteria</th>
													<th>Evaluation Round 3</th>
												</tr>
											</thead>

												<tbody>
													<div class="form-group">
														<div>
														<textarea name="teamid" id="teamid" class="form-control" hidden><%= teamId %></textarea></div>
													</div>
													<tr>
															
															<td name="1">SOULTION APPROACH</td>
															<td>
																<div class="form-group">
																<div>
																	<select name="q1" class="form-control form-select"required>
																		<option value="">-- Select --</option>
																		<option value=1>1</option>
																		<option value=2>2</option>
																		<option value=3>3</option>
																		<option value=4>4</option>
																		<option value=5>5</option>
																	</select>
																</div>
															</td>

															</tr>
															<tr>
																
																<td name="q2">CRITICALITY/ IMPACT/ AMBITIOUSNESS</td>
																<td>
																	<div class="form-group">
																	<div>
																		<select name="q2" class="form-control form-select"required>
																			<option value="">-- Select --</option>
																			<option value=1>1</option>
																			<option value=2>2</option>
																			<option value=3>3</option>
																			<option value=4>4</option>
																			<option value=5>5</option>
																		</select>
																	</div>
																</td>
															</tr>
															<tr>
																
																<td name="3">TECHNOLOGY/ INNOVATION</td>
																<td>
																	<div class="form-group">
																	<div>
																		<select name="q3" class="form-control form-select"required>
																			<option value="">-- Select --</option>
																			<option value=1>1</option>
																			<option value=2>2</option>
																			<option value=3>3</option>
																			<option value=4>4</option>
																			<option value=5>5</option>
																		</select>
																	</div>
																</td>
															</tr>
															<tr>
																
																<td name="q4">PLAN/ EXECUTION/ DEMO</td>
																<td>
																	<div class="form-group">
																	<div>
																		<select name="q4" class="form-control form-select"required>
																			<option value="">-- Select --</option>
																			<option value=1>1</option>
																			<option value=2>2</option>
																			<option value=3>3</option>
																			<option value=4>4</option>
																			<option value=5>5</option>
																		</select>
																	</div>
																</td>
															</tr>
															<tr>
															
																<td name="5">USER EXPERIENCE</td>
																<td>
																	<div class="form-group">
																	<div>
																		<select name="q5" class="form-control form-select"required>
																			<option value="">-- Select --</option>
																			<option value=1>1</option>
																			<option value=2>2</option>
																			<option value=3>3</option>
																			<option value=4>4</option>
																			<option value=5>5</option>
																		</select>
																	</div>
																</td>
															</tr>     
												</tbody>	
										</table>

                                        <div class="row">
                                            <div class="text-end">
                                                <input type="submit"  class="btn btn-primary" name="submit">
                                            </div>
                                        </div>

                                    </form>
									</div>
								</div>
							</div>							
						</div>					
					</div>
				
			</div>
			<!-- /Page Wrapper -->
			
        </div>
		<!-- /Main Wrapper -->
		<script>
			window.addEventListener("beforeunload", function(event){
				event.preventDefault();
				event.returnValue= "Are you sure you want to exit"
			});
		</script>

			<script>
				let taskCount = 1; // Initialize the task count
					// Function to add a new task input field
					$("#addTask").click(function() {
						// Create a new task input field with a numbered label
						const taskField = `
								<label>Enter Task ${taskCount+1}:</label>
								<div class="input-group">
									<input type="text" class="form-control" name="task[${taskCount}]">
								
								</div>
						`;
		
						// Append the task field to the taskFields div
						$("#taskFields").append(taskField);
		
						// Increment the task count
						taskCount++;
					});
		
				</script>
		<!-- jQuery -->
        <script src="/assets/js/jquery-3.6.0.min.js"></script>

		<!-- Bootstrap Core JS -->
        <script src="/assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
		
		<!-- Slimscroll JS -->
		<script src="/assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>

		<!-- Select2 JS -->
		<script src="/assets/plugins/select2/js/select2.min.js"></script>

		<!-- Custom JS -->
		<script src="/assets/js/script.js"></script>
		
    </body>
</html>
